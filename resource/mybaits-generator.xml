<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>

    <!--
        targetRuntime="MyBatis3Simple":生成简单版的CRUD
        MyBatis3:豪华版

     -->
    <context id="DB2Tables" targetRuntime="MyBatis3">

        <commentGenerator>
            <property name="suppressDate" value="true"/>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <!-- jdbcConnection：指定如何连接到目标数据库 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://127.0.0.1:3306/ssm_demo?allowMultiQueries=true"
                        userId="ssmdemo"
                        password="ssmdemo">
        </jdbcConnection>

        <!--  -->
        <javaTypeResolver >
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <!-- javaModelGenerator：指定javaBean的生成策略
        targetPackage="test.model"：目标包名
        targetProject="\当前项目（SpringMVC_Mybatis_Shiro_Demo）\src"：目标工程
        -->
        <javaModelGenerator targetPackage="com.sckj.generator.bean"
                            targetProject=".\src">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <!-- sqlMapGenerator：sql映射生成策略： -->
        <sqlMapGenerator targetPackage="com.sckj.generator.mapper"
                         targetProject=".\src">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>

        <!-- javaClientGenerator:指定mapper接口所在的位置 -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.sckj.generator.dao"
                             targetProject=".\src">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <!-- 指定要逆向分析哪些表：根据表要创建javaBean -->
        <table tableName="sys_authority" domainObjectName="Authority"
               schema="general" selectByExampleQueryId="false" enableCountByExample="false"
               enableUpdateByExample="false" enableSelectByExample="false" enableDeleteByExample="false"></table>

        <table tableName="sys_department" domainObjectName="Department"
               schema="general" selectByExampleQueryId="false" enableCountByExample="false"
               enableUpdateByExample="false" enableSelectByExample="false" enableDeleteByExample="false"></table>

        <table tableName="sys_role" domainObjectName="Role"
               schema="general" selectByExampleQueryId="false" enableCountByExample="false"
               enableUpdateByExample="false" enableSelectByExample="false" enableDeleteByExample="false"></table>

        <table tableName="sys_role_authority" domainObjectName="RoleAuthority"
               schema="general" selectByExampleQueryId="false" enableCountByExample="false"
               enableUpdateByExample="false" enableSelectByExample="false" enableDeleteByExample="false"></table>

        <table tableName="sys_role_permission" domainObjectName="RolePermission"
               schema="general" selectByExampleQueryId="false" enableCountByExample="false"
               enableUpdateByExample="false" enableSelectByExample="false" enableDeleteByExample="false"></table>

        <table tableName="sys_user" domainObjectName="User"
               schema="general" selectByExampleQueryId="false" enableCountByExample="false"
               enableUpdateByExample="false" enableSelectByExample="false" enableDeleteByExample="false"></table>

        <table tableName="sys_user_role" domainObjectName="UserRole"
               schema="general" selectByExampleQueryId="false" enableCountByExample="false"
               enableUpdateByExample="false" enableSelectByExample="false" enableDeleteByExample="false"></table>
    </context>
</generatorConfiguration>